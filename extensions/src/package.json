{
  "name": "browser-extension-donate4fun-firefox",
  "version": "0.7.0",
  "description": "Donate4Fun Firefox extension.",
  "homepage": "https://donate4.fun",
  "type": "module",
  "scripts": {
    "build": "rollup -c --failAfterWarnings",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "package-chrome": "rm -f ../chrome.zip && cd ../chrome && zip -r ../chrome.zip .",
    "package-firefox": "rm -f ../firefox.zip && cd ../firefox && zip -r ../firefox.zip .",
    "package": "npm run package-chrome && npm run package-firefox",
    "package-clean": "rm -rf ../firefox ../chrome && npm run build && npm run package"
  },
  "devDependencies": {
    "@guanghechen/rollup-plugin-copy": "^2.1.0",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@sveltejs/vite-plugin-svelte": "^1.0.5",
    "@vitejs/plugin-react": "~1.2.0",
    "history": "^5.3.0",
    "rollup": "^2.79.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-navigator": "^3.2.2",
    "typescript": "^4.1.2",
    "vite": "^3",
    "webextension-polyfill": "^0.7.0"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@lottiefiles/svelte-lottie-player": "github:donate4fun/svelte-lottie-player",
    "lottie-web": "^5.9.6",
    "sirv-cli": "^1.0.0",
    "svelte-confetti": "^1.2.0",
    "svelte-fa": "^3.0.3"
  }
}
